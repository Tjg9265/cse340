<%- include('../partials/header') %>

<h1>My Travel Journal</h1>

<a href="/travel/add" class="button">Add Entry</a>

<ul class="entry-list">
  <% entries.forEach(entry => { %>
    <li>
      <h2><%= entry.entry_title %></h2>
      <p><strong>Location:</strong> <%= entry.location_name %></p>
      <p><%= entry.entry_content.substring(0, 120) %>...</p>
      <p><em><%= entry.entry_date.toDateString() %></em></p>
    </li>
  <% }) %>
</ul>

<%- include('../partials/footer') %>
