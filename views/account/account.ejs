<%- include('../partials/header') %>

<h1>Account Management</h1>

<%- messages() %>

<section class="account-info">
  <h2>Welcome, <%= account.account_firstname %>!</h2>

  <p>You are logged in as: <strong><%= account.account_type %></strong></p>

  <p>Your Account ID: <strong><%= account.account_id %></strong></p>
</section>

<hr>

<section class="account-actions">
  <h3>Your Account</h3>
  <ul>
    <li>
      <a href="/account/update/<%= account.account_id %>">
        Update Account Information
      </a>
    </li>
    <li><a href="/account/logout">Log Out</a></li>
    <li><a href="/">Return to Home</a></li>
  </ul>
</section>

<hr>

<% if (account.account_type === "Employee" || account.account_type === "Admin") { %>
<section class="admin-tools">
  <h3>Inventory Management</h3>
  <p>You have elevated permissions. Use the links below to manage inventory.</p>

  <ul>
    <li><a href="/inv">View Inventory Management</a></li>
    <li><a href="/inv/add-classification">Add Vehicle Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>
</section>
<% } %>

<%- include('../partials/footer') %>
