<%- include('../partials/head', { title }) %>
<%- include('../partials/navigation') %>

<h1><%= title %></h1>

<%- messages() %>

<section class="account-info">
  <h2>
    Welcome, <%= account?.account_firstname || "User" %>!
  </h2>

  <p>
    You are logged in as:
    <strong><%= account?.account_type || "Unknown" %></strong>
  </p>

  <p>
    Your Account ID:
    <strong><%= account?.account_id || "N/A" %></strong>
  </p>
</section>

<hr>

<section class="account-actions">
  <h3>What would you like to do?</h3>

  <ul>
    <li><a href="/account/logout">Log Out</a></li>
    <li><a href="/">Return to Home</a></li>
  </ul>
</section>

<hr>

<% if (account && (account.account_type === "Employee" || account.account_type === "Admin")) { %>
<section class="admin-tools">
  <h2>Employee / Admin Tools</h2>
  <p>You have elevated permissions. Use the links below to manage inventory.</p>

  <ul>
    <li><a href="/inv">View Inventory Management</a></li>
    <li><a href="/inv/add-classification">Add Vehicle Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>
</section>
<% } %>

<%- include('../partials/footer') %>
