

<main>
  <h1><%= title %></h1>

  <!-- Flash Messages -->
  <%- messages() %>

  <% if (errors && errors.array) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <section class="form-section">
    <form action="/inv/add-classification" method="post" novalidate>

      <label for="classification_name">
        New Classification Name
        <span class="helper"> (No spaces or special characters) </span>
      </label>

      <input 
        type="text"
        id="classification_name"
        name="classification_name"
        required
        pattern="^[A-Za-z0-9]+$"
        title="Letters and numbers only. No spaces or special characters."
        value="<%= classification_name || '' %>"
      >

      <button type="submit">Add Classification</button>

    </form>
  </section>
</main>
