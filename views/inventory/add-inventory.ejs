

<form action="/inv/add-inventory" method="post" novalidate>

  <!-- Classification -->
  <div class="form-control">
    <label for="classification_id">Classification</label>
    <%- classificationList %>
  </div>

  <!-- Make -->
  <div class="form-control">
    <label for="inv_make">Make</label>
    <input 
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%= inv_make || '' %>"
    >
  </div>

  <!-- Model -->
  <div class="form-control">
    <label for="inv_model">Model</label>
    <input 
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%= inv_model || '' %>"
    >
  </div>

  <!-- Year -->
  <div class="form-control">
    <label for="inv_year">Year</label>
    <input 
      type="number"
      id="inv_year"
      name="inv_year"
      min="1900"
      max="2100"
      required
      value="<%= inv_year || '' %>"
    >
  </div>

  <!-- Description -->
  <div class="form-control">
    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required>
      <%= inv_description || '' %>
    </textarea>
  </div>

  <!-- Image Path -->
  <div class="form-control">
    <label for="inv_image">Image Path</label>
    <input 
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= inv_image || '' %>"
    >
  </div>

  <!-- Thumbnail Path -->
  <div class="form-control">
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input 
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= inv_thumbnail || '' %>"
    >
  </div>

  <!-- Price -->
  <div class="form-control">
    <label for="inv_price">Price</label>
    <input 
      type="number"
      id="inv_price"
      name="inv_price"
      step="0.01"
      required
      value="<%= inv_price || '' %>"
    >
  </div>

  <!-- Miles -->
  <div class="form-control">
    <label for="inv_miles">Miles</label>
    <input 
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      value="<%= inv_miles || '' %>"
    >
  </div>

  <!-- Color -->
  <div class="form-control">
    <label for="inv_color">Color</label>
    <input 
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%= inv_color || '' %>"
    >
  </div>

  <button type="submit">Add Vehicle</button>

</form>
